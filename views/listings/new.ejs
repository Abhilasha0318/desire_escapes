<% layout('layouts/boilerplate') %>

<div class="row justify-content-center">
  <div class="col-12 col-lg-8">
    <h3 class="mb-4">Create a New Listing</h3>

    <form method="POST" action="/listings" class="p-4 bg-white shadow rounded needs-validation" novalidate>
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
          id="title" 
          name="listing[title]" 
          placeholder="Add a catchy title" 
          type="text" 
          class="form-control" 
          required
        />
        <div class="invalid-feedback">Please provide a title</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea 
          id="description" 
          name="listing[description]" 
          placeholder="Enter description" 
          class="form-control" 
          rows="4" 
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a description</div>
      </div>

      <!-- Image (optional) -->
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input 
          id="image" 
          name="listing[image][url]" 
          placeholder="Enter image URL" 
          type="url" 
          class="form-control"
        />
      </div>

      <!-- Price & Country -->
      <div class="row">
        <div class="mb-3 col-md-6">
          <label for="price" class="form-label">Price</label>
          <input 
            id="price" 
            name="listing[price]" 
            placeholder="1200" 
            type="number" 
            class="form-control" 
            min="1" 
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>
        <div class="mb-3 col-md-6">
          <label for="country" class="form-label">Country</label>
          <input 
            id="country" 
            name="listing[country]" 
            placeholder="India" 
            type="text" 
            class="form-control" 
            required
          />
          <div class="invalid-feedback">Please enter the country</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input 
          id="location" 
          name="listing[location]" 
          placeholder="Jaipur, Rajasthan" 
          type="text" 
          class="form-control" 
          required
        />
        <div class="invalid-feedback">Please provide the location</div>
      </div>

      <button type="submit" class="btn btn-dark">Add Listing</button>
    </form>
  </div>
</div>

<!-- Bootstrap validation script -->
<script>
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>

