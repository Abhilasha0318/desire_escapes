<% layout("/layouts/boilerplate") %>
<div class="row justify-content-center">
  <div class="col-8">
    <div class="container mt-5">
      <h3 class="mb-4">Create a New Listing</h3>
      
      <form method="POST" action="/listings" class="p-4 bg-white shadow rounded">
        
        <!-- Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input 
            id="title"
            name="listing[title]"
            placeholder="Add a catchy title" 
            type="text" 
            class="form-control"
            required
          />
        </div>
        
        <!-- Description -->
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            id="description"
            name="listing[description]"
            placeholder="Enter description"
            class="form-control"
            rows="4"
            required
          ></textarea>
        </div>

        <!-- Image -->
        <div class="mb-3">
          <label for="image" class="form-label">Image Link</label>
          <input 
            id="image"
            name="listing[image]" 
            placeholder="Enter image URL" 
            type="url" 
            class="form-control"
            required
          />
        </div>
        
        <!-- Price & Country in same row -->
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="price" class="form-label">Price</label>
            <input 
              id="price"
              name="listing[price]" 
              placeholder="1200" 
              type="number" 
              class="form-control"
              min="0"
              step="0.01"
              required
            />
          </div>

          <div class="mb-3 col-md-6">
            <label for="country" class="form-label">Country</label>
            <input 
              id="country"
              name="listing[country]" 
              placeholder="India" 
              type="text" 
              class="form-control"
              required
            />
          </div>
        </div>

        <!-- Location -->
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input 
            id="location"
            name="listing[location]" 
            placeholder="Jaipur" 
            type="text" 
            class="form-control"
            required
          />
        </div>
         <br><br>
       
        
        <!-- Submit -->
        <button type="submit" class="btn btn-dark add-btn">Add Listing</button>
       <br><br>
      </form>
    </div>
  </div>
</div>
