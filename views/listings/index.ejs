<% layout('layouts/boilerplate') %>
<% const pageTitle = 'All Listings'; %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">All Listings</h1>
  <a class="btn btn-dark" href="/listings/new">+ New Listing</a>
</div>

<div class="row g-4">
  <% listings.forEach(listing => { %>
    <div class="col-md-4">
      <div class="card h-100 shadow-sm">
        <img
          src="<%= (listing.image && listing.image.url) || 'https://via.placeholder.com/800x600?text=No+Image' %>"
          class="card-img-top"
          alt="<%= listing.title %>"
          style="height: 220px; object-fit: cover;"
        >
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text text-muted mb-3">
            <%= listing.description ? listing.description.slice(0, 90) + (listing.description.length > 90 ? '…' : '') : 'No description.' %>
          </p>
          <div class="mt-auto d-flex justify-content-between align-items-center">
            <span class="fw-semibold">₹<%= Number(listing.price || 0).toLocaleString('en-IN') %></span>
            <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm">View</a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>




