<% layout ("/layouts/boilerplate") %>
<body>
  <h1>All Listings</h1>

  <form method="GET" action="/listings/new">
    <button>Create New Listing</button>
  </form>

  <% if (allListings.length === 0) { %>
    <p>No listings yet. Create one!</p>
  <% } else { %>
    <% for (let listing of allListings) { %>
      <div style="border: 1px solid #ccc; padding: 10px; margin: 20px 0;">
        <h2>
          <a href="/listings/<%= listing._id %>"><%= listing.title %></a>
        </h2>
        <img src="<%= listing.image %>" alt="Listing Image" width="200" />
        <p><strong>Price:</strong> â‚¹<%= listing.price %></p>
        <p><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
      </div>
    <% } %>
  <% } %>
</body>





