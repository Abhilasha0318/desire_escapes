<% layout("/layouts/boilerplate") %>
<body>
  <h1 class="my-4">All Listings</h1>

  <% if (allListings.length === 0) { %>
    <p>No listings yet. Create one!</p>
  <% } else { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% for (let listing of allListings) { %>
        <div class="col">
          <div class="card h-100 ">
            <img src="<%= listing.image.url %>" 
                 class="card-img-top rounded-top" 
                 alt="<%= listing.title %>">
            <div class="card-body">
              <h5 class="card-title mb-2">
                <a href="/listings/<%= listing._id %>" class="text-dark text-decoration-none fw-bold">
                  <%= listing.title %>
                </a>
              </h5>
              <p class="text-muted mb-1">â‚¹<%= listing.price %> / night</p>
              <p class="text-muted mb-0"><%= listing.location %>, <%= listing.country %></p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  <% } %>
</body>







