<% layout('layouts/boilerplate') %>

<div class="row justify-content-center">
  <div class="col-12 col-lg-8">
    <h3 class="mb-4">Edit Your Listing</h3>

    <form method="POST"
     action="/listings/<%= listing._id %>?_method=PUT" 
     class="p-4 bg-white shadow rounded needs-validation" 
     novalidate>
      
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input 
          id="title" 
          name="listing[title]" 
          value="<%= listing.title %>" 
          placeholder="Update title" 
          type="text" 
          class="form-control"
          required/>
        <div class="invalid-feedback">Please provide a title</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="listing[description]" placeholder="Update description" class="form-control" rows="4" required><%= listing.description %></textarea>
        <div class="invalid-feedback">Please enter a description</div>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Image Link</label>
        <input 
          id="image" 
          name="listing[image][url]" 
          value="<%= listing.image && listing.image.url %>" 
          placeholder="Enter image URL" 
          type="url" 
          class="form-control"/>
        <div class="invalid-feedback">Please provide an image link</div>
      </div>

      <!-- Price, Country & Location in one row -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input id="price" name="listing[price]" value="<%= listing.price %>" placeholder="1200" type="number" class="form-control" min="0" step="0.01" required/>
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>
        <div class="mb-3 col-md-4">
          <label for="country" class="form-label">Country</label>
          <input id="country" name="listing[country]" value="<%= listing.country %>" placeholder="India" type="text" class="form-control" required/>
          <div class="invalid-feedback">Please enter the country</div>
        </div>
        <div class="mb-3 col-md-4">
          <label for="location" class="form-label">Location</label>
          <input id="location" name="listing[location]" value="<%= listing.location %>" placeholder="Jaipur" type="text" class="form-control" required/>
          <div class="invalid-feedback">Please provide the location</div>
        </div>
      </div>

      <!-- Update Button -->
      <div class="text-center mt-3 mb-4">
        <button type="submit" class="btn btn-dark btn-sm px-4">Update Listing</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/script.js"></script>
