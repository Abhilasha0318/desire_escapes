<% layout('layouts/boilerplate') %>

<div class="container my-5">
  <div class="row">
    <div class="col-12 col-lg-10 mx-auto">

      <!-- Listing Card -->
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        <!-- Image -->
        <img 
          src="<%= listing.image && listing.image.url %>" 
          alt="<%= listing.title %>" 
          class="img-fluid w-100" 
          style="object-fit: cover; height: 420px;"
        >

        <!-- Body -->
        <div class="card-body p-4">

          <!-- Title & Description -->
          <h1 class="fw-bold mb-3" style="font-size: 1.8rem;"><%= listing.title %></h1>
          <p class="text-muted mb-4" style="font-size: 1rem; line-height: 1.6;"><%= listing.description %></p>

          <!-- Divider -->
          <hr class="my-4">

          <!-- Location & Price -->
          <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
              <p class="mb-1">
                <span class="fw-semibold">Location:</span> <%= listing.location %>, <%= listing.country %>
              </p>
            </div>
            <div>
              <p class="h5 fw-bold mb-0">â‚¹<%= listing.price.toLocaleString() %> <span class="text-muted fs-6">/ night</span></p>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex gap-2 mb-5">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark px-4 py-2 rounded-pill">Edit</a>
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
              <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill">Delete</button>
            </form>
            <a href="/listings" class="btn btn-light border ms-auto px-4 py-2 rounded-pill">Back</a>
          </div>

          <!-- Review Section -->
          <div class="p-4 border rounded-4 bg-white shadow-sm mb-5">

            <!-- Leave a Review Form -->
            <h4 class="fw-bold mb-4">Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" 
                  method="POST"
                  class="needs-validation mb-5" 
                  novalidate>
              
              <!-- Rating -->
              <div class="mb-3">
                <label for="rating" class="form-label fw-semibold">Your Rating</label>
                <input 
                  type="range" 
                  class="form-range" 
                  min="1" 
                  max="5" 
                  step="1" 
                  id="rating" 
                  name="review[rating]"
                  required
                >
                <div class="d-flex justify-content-between text-muted small mt-1">
                  <span>1</span><span>2</span><span>3</span><span>4</span><span>5</span>
                </div>
                <div class="invalid-feedback">
                  Please select a rating.
                </div>
              </div>

              <!-- Comment -->
              <div class="mb-3">
                <label for="comment" class="form-label fw-semibold">Your Comments</label>
                <textarea 
                  id="comment" 
                  name="review[comment]" 
                  rows="4" 
                  class="form-control rounded-3 shadow-sm" 
                  placeholder="Share your experience..."
                  required
                ></textarea>
                <div class="invalid-feedback">
                  Please enter a comment.
                </div>
              </div>

              <!-- Submit Button -->
              <button type="submit" class="btn btn-dark w-100 py-2 rounded-pill fw-semibold shadow-sm">
                Submit Review
              </button>
            </form>

            <!-- Display All Reviews -->
            <h4 class="fw-bold mb-4">All Reviews</h4>
            <% if (listing.reviews.length === 0) { %>
              <p class="text-muted">No reviews yet. Be the first to review!</p>
            <% } else { %>
              <div class="row g-4">
                <% listing.reviews.forEach(review => { %>
                  <div class="col-12 col-md-6">
                    <div class="card h-100 shadow-sm rounded-4">
                      <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                          <h6 class="card-title mb-0">Guest</h6> <!-- Author can go here later -->
                          <div class="text-warning">
                            <% for(let i=1; i<=review.rating; i++){ %>
                              <i class="bi bi-star-fill"></i>
                            <% } %>
                            <% for(let i=review.rating+1; i<=5; i++){ %>
                              <i class="bi bi-star"></i>
                            <% } %>
                          </div>
                        </div>
                        <p class="card-text"><%= review.comment %></p>
                        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                          <button class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                      </div>
                    </div>
                  </div>
                <% }) %>
              </div>
            <% } %>

          </div>
          <!-- End Review Section -->

        </div>
      </div>
      <!-- End Listing Card -->

    </div>
  </div>
</div>

<!-- Bootstrap validation script -->
<script>
(() => {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>

